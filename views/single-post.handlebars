<h1 id="blog-title">{{post.title}}</h1>
<p id="blog-content">{{post.content}}</p>
{{#each post.comments}}
<div>
  <h4>{{this.comment_text}}</h4>
  <p>By: {{this.user.username}} -- {{formatDate this.date_created}}</p>
</div>
{{/each}}
{{#if logged_in}}
<form class="comment-form">
  <input type="hidden" name="post_id" value="{{post.id}}">
  <textarea id="comment_text" name="content" placeholder="New Comment"></textarea>
  <button type="submit">Submit Comment</button>
</form>
{{/if}}
<script src="/js/comment.js"></script>
